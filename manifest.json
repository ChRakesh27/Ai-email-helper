{
  "manifest_version": 3,
  "name": "AI Email Helper",
  "description": "Generate email content with AI and insert it into the compose box using OK/Close buttons.",
  "version": "1.0",
  "permissions": ["scripting", "activeTab", "storage"],
  "host_permissions": [
    "https://mail.google.com/*",
    "https://outlook.live.com/*",
    "https://*.outlook.com/*",
    "https://mail.yahoo.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon16.png",
      "128": "icons/icon16.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://mail.google.com/*",
        "https://outlook.live.com/*",
        "https://*.outlook.com/*",
        "https://mail.yahoo.com/*"
      ],
      "js": ["content_script.js"],
      "run_at": "document_idle"
    }
  ]
}
